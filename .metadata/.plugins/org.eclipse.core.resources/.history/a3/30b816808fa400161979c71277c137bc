package ThreadPractice;

public class PrimeNumbers {
	
	int[] primes = new int[1000];
	
	public static void main(String[] args) {
		new PrimeNumbers();
	}
	
	boolean isPrime(int num){
		for(int i = 2; i < num; i++){
			if(num % i == 0)
				return false;
		}
		return true;
	}
	
	public PrimeNumbers(){		
		new Thread(() -> {
			boolean running = true;
			int count = 0;
			int num = 1;
			while(running){
				if(isPrime(num)){
					primes[count] = num;
					count++;
				}
				num++;
			if(count == 1000){
				running = false;
			}
		}}).start();
		
		for(int i: primes){
			System.out.println(i);
		}
	}

}
