package PythonChallenge;

public class PythonChallenge {
	public static void main(String[] args) {
		twoLessChar("g fmnc wms bgblr rpylqjyrc gr zw fylb. rfyrq ufyr amknsrcpq ypc dmp. bmgle gr gl zw fylb gq glcddgagclr ylb rfyr'q ufw rfgq rcvr gq qm jmle. sqgle qrpgle.kyicrpylq() gq pcamkkclbcb. lmu ynnjw ml rfc spj.");
	}

	public static void twoLessChar(String x){
		String y = "";
		for(int i = 0; i < x.length(); i++){
			if(x.charAt(i) == 'a' || x.charAt(i) == '.' || x.charAt(i) == '(' || x.charAt(i) == ')' || x.charAt(i) == ' ' || x.charAt(i) == '\''){
				y+= x.charAt(i);
			}
			else{
				int temp = (int)x.charAt(i);
				temp = temp + 2;
				char tempChar = (char)temp;
				y += tempChar;
			}
		}
		System.out.println(y);
	}

}
