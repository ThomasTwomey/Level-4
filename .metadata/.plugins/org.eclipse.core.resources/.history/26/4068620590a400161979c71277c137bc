package ThreadPractice;

public class PrimeNumbers {
	int[] primes = new int[1000];
	
	public static void main(String[] args) {
		
		new Thread(() -> {
			boolean running = true;
			int count = 0;
			int num = 2;
			while(running){
				if(isPrime(num)){
					primes[count] = num;
					count++;
				}
			if(count == 1000){
				running = false;
			}
			num++;
		}}).start();
		
		for(int i: primes){
			System.out.println(i);
		}

	}
	
	static boolean isPrime(int num){
		for(int i = 2; i < num; i++){
			if(num % i == 0)
				return false;
		}
		return true;
	}
}
