public class EasyConstructorQuiz {

	@Test
	public void testBasicConstruction() {
		Person vic = new Person("vic wintriss", 81);
		assertEquals("vic", vic.getFirstName());
		assertEquals("wintriss", vic.getLastName());
		assertEquals(81, vic.getAge());
	}

